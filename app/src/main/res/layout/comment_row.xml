<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="40dp"
    app:cardCornerRadius="@dimen/margin_8"
    android:elevation="@dimen/margin_16"
    android:layout_margin="@dimen/margin_8">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_baseline_account_circle_24"
            android:layout_marginEnd="@dimen/margin_8"/>

        <com.balius.filimo.customview.PersianBoldTextView
            android:id="@+id/txt_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/img_account"
            android:text="l;uglkglgy"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_8"/>

        <com.balius.filimo.customview.PersianTextView
            android:id="@+id/txt_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/txt_user_name"
            android:text="hjghghglghlhglhglhglhglglkg"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_8"
            android:layout_alignParentStart="true"
            android:textDirection="rtl"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>





</RelativeLayout>