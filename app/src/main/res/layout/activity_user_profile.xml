<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.UserProfileActivity">


    <RelativeLayout
        android:id="@+id/rel_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_200">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_120"
            android:layout_marginTop="@dimen/margin_16"
            app:srcCompat="@drawable/tv_icon"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_login_sighnup"
            android:layout_width="@dimen/margin_140"
            android:layout_height="@dimen/margin_40"
            android:layout_below="@id/img_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_16"
            android:background="@drawable/btn_style"
            android:text="@string/login_and_sighnup" />

    </RelativeLayout>





</RelativeLayout>