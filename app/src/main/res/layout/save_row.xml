<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:id="@+id/rel_save_video"
        android:layout_width="@dimen/margin_150"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_save"
            android:layout_width="@dimen/margin_120"
            android:layout_height="@dimen/margin_180"
            android:elevation="@dimen/margin_24"
            app:cardCornerRadius="@dimen/margin_8"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_8">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_video"
                    android:layout_width="@dimen/margin_120"
                    android:layout_height="@dimen/margin_180"

                    android:scaleType="fitXY" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>



        <com.balius.filimo.customview.PersianTextView
            android:id="@+id/txt_video_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_save"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="@dimen/margin_8" />

    </RelativeLayout>



</RelativeLayout>