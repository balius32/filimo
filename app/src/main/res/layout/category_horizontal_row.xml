<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/margin_300"
        android:layout_height="@dimen/margin_180"
        android:layout_marginStart="@dimen/margin_8"
        android:id="@+id/card_category">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_video"
                android:layout_width="@dimen/margin_140"
                android:layout_height="@dimen/margin_160"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@color/dark_yellow"
                android:scaleType="fitXY"/>

            <com.balius.filimo.customview.PersianTextView
                android:id="@+id/txt_video_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16"
                android:layout_marginEnd="@dimen/margin_8"
                android:layout_toStartOf="@id/img_video"
                android:text="video name"
                android:textColor="@color/white" />

            <com.balius.filimo.customview.PersianTextView
                android:id="@+id/txt_category_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_video_name"
                android:layout_marginTop="@dimen/margin_20"
                android:layout_marginEnd="@dimen/margin_8"
                android:layout_toStartOf="@id/img_video"
                android:text="category name"
                android:textColor="@color/white" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_baseline_play_circle_outline_24"
                android:layout_toStartOf="@id/img_video"
               android:layout_alignParentBottom="true"
                android:layout_marginEnd="@dimen/margin_8"
                android:layout_marginBottom="@dimen/margin_8"/>

            <com.balius.filimo.customview.PersianTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_yellow"
                android:text="@string/what_the_film"
                android:layout_toStartOf="@id/img_play"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="@dimen/margin_8"
                android:layout_marginBottom="@dimen/margin_8"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>